<Window x:Class="DriveIT_Windows_Client.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="900" Width="1600" Background="#FFEDF1F3">
    <Window.Resources>
        <ControlTemplate x:Key="UserControlCars" TargetType="{x:Type UserControl}">
            <Grid>
                <Label Content="Cars" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="59.96" Width="337.493" FontSize="32"/>
            </Grid>
        </ControlTemplate>
    </Window.Resources>
    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="ListUpdateGroup"/>
        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Height="80" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="326"/>
            </Grid.ColumnDefinitions>
            <Grid.Background>
                <SolidColorBrush Color="#FF2E4585" Opacity="0.5"/>
            </Grid.Background>
            <Button Content="Open entity window" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="80" Height="60" Click="Button_Click"/>
            <Button Content="Button" HorizontalAlignment="Left" Margin="110,10,0,0" VerticalAlignment="Top" Width="80" Height="60"/>
            <Button Content="Button" HorizontalAlignment="Left" Margin="210,10,0,0" VerticalAlignment="Top" Width="80" Height="60"/>
            <Button Content="Button" HorizontalAlignment="Left" Margin="316,10,0,0" VerticalAlignment="Top" Width="80" Height="60"/>
            <Button Content="Button" HorizontalAlignment="Left" Margin="420,10,0,0" VerticalAlignment="Top" Width="80" Height="60"/>
            <Border BorderBrush="Black" BorderThickness="1" Height="80" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
            <Button Content="Button" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="80" Height="60" Grid.Column="1"/>
            <Button Content="Button" HorizontalAlignment="Right" Margin="0,10,118,0" VerticalAlignment="Top" Width="80" Height="60" Grid.Column="1"/>
            <Button Content="Button" HorizontalAlignment="Right" Margin="0,10,228,0" VerticalAlignment="Top" Width="80" Height="60" Grid.Column="1"/>
            <Button Content="Button" HorizontalAlignment="Left" Margin="527,10,0,0" VerticalAlignment="Top" Width="80" Height="60"/>
        </Grid>
        <Grid Margin="10" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Grid.Background>
                    <SolidColorBrush Color="#FFCFCECA" Opacity="0.2"/>
                </Grid.Background>
                <Button Content="Requests for &#xA;contact" HorizontalAlignment="Left" Margin="10,35.5,0,0" VerticalAlignment="Top" Width="180" Height="100" FontSize="18" Grid.Column="1" Click="RequestForContactButtonClick"/>
                <Button Content="Cars" HorizontalAlignment="Left" Margin="10,180.5,0,0" VerticalAlignment="Top" Width="180" Height="100" FontSize="18" Grid.Column="1" Click="CarsButtonClick"/>
                <Button Content="Orders" HorizontalAlignment="Left" Margin="10,325.5,0,0" VerticalAlignment="Top" Width="180" Height="100" FontSize="18" Grid.Column="1"/>
                <Button Content="Customers" HorizontalAlignment="Left" Margin="10,470.5,0,0" VerticalAlignment="Top" Width="180" Height="100" FontSize="18" Grid.Column="1"/>
                <Button Content="Employees" HorizontalAlignment="Left" Margin="10,615.5,0,0" VerticalAlignment="Top" Width="180" Height="100" FontSize="18" Grid.Column="1"/>
                <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="3"/>
            </Grid>
            <Grid x:Name="EntitiesGrid" Grid.Column="1" Margin="10">
                <Grid.Background>
                    <SolidColorBrush Color="#FFCFCECA" Opacity="0.2"/>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="76"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border BorderBrush="Black" BorderThickness="1" Grid.RowSpan="2"/>
            </Grid>
            <Grid Grid.Column="2" Margin="0,10" HorizontalAlignment="Right" Width="290">
                <Grid.RowDefinitions>
                    <RowDefinition Height="311*"/>
                    <RowDefinition Height="439*"/>
                </Grid.RowDefinitions>
                <Grid.Background>
                    <SolidColorBrush Color="#FFCFCECA" Opacity="0.2"/>
                </Grid.Background>
                <Image HorizontalAlignment="Left" Height="291" Margin="10,10,0,0" VerticalAlignment="Top" Width="270" Source="Image/EmployeeTemplatePic.jpg">
                    <Image.OpacityMask>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Image.OpacityMask>
                </Image>
                <Label Content="Anders Wind Steffensen" Margin="10,10,10,0" VerticalAlignment="Top" Height="41" FontSize="18" Grid.Row="1"/>
                <Label Content="Employee of the month" Margin="10,56,10,0" VerticalAlignment="Top" Height="41" FontSize="18" Grid.Row="1"/>
                <Label Content="Commision:" Margin="10,125.666,10,0" VerticalAlignment="Top" Height="41" FontSize="18" Grid.Row="1"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,0,0,10" TextWrapping="Wrap" VerticalAlignment="Bottom" Height="29" Width="270" FontStyle="Italic" TextAlignment="Center" Grid.Row="1">
                    <TextBlock.Background>
                        <SolidColorBrush Color="Black" Opacity="0.15"/>
                    </TextBlock.Background>
                    <Hyperlink NavigateUri="http://www.google.com" RequestNavigate="Hyperlink_RequestNavigate">
                         Website
                    </Hyperlink>
                </TextBlock>
                <Border BorderBrush="Black" BorderThickness="1" Grid.RowSpan="2"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
