<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="DriveIT.WindowsClient.MainViewPowerToolBarUC"
	x:Name="UserControl" Height="80" VerticalAlignment="Top" Width="833" Template="{DynamicResource RequestForContactEntitiesPowerToolBarUC}">
	<UserControl.Resources>
		<ControlTemplate x:Key="CarEntitiesPowerToolBarUC" TargetType="{x:Type UserControl}">
			<Grid Height="80" VerticalAlignment="Top">
				<Grid.Background>
					<SolidColorBrush Color="#FF991F1F" Opacity="0.5"/>
				</Grid.Background>
				<Label Content="Cars power tools bar" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="24"/>
			</Grid>
		</ControlTemplate>
		<ControlTemplate x:Key="RequestForContactEntitiesPowerToolBarUC" TargetType="{x:Type UserControl}">
			<Grid>
				<Grid.Background>
					<SolidColorBrush Color="#FF9F49A8" Opacity="0.5"/>
				</Grid.Background>
				<Label Content="Request for contact" HorizontalAlignment="Left" Margin="35,20,0,0" VerticalAlignment="Top" FontSize="24"/>
			</Grid>
		</ControlTemplate>
	</UserControl.Resources>

	<Grid x:Name="LayoutRoot" Height="80" VerticalAlignment="Top"/>
</UserControl>