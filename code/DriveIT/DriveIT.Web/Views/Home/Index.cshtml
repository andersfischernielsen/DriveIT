@model IEnumerable<DriveIT.Models.CarDto>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <br/>
        <p>
            <b>Welcome</b> to the DriveIT website selling used cars from our own used car lot. If you're a new customer you can register @Html.ActionLink("here", "Register", "Account") .
            If you're already a user of the system, you can login @Html.ActionLink("here", "Login", "Account") .
        </p>
    </div>
    <div class="col-md-3"></div>
</div>

<h3>Newest cars</h3>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Make)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sold)
        </th>

        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Make)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td>
            @if (item.Sold == true)
            {
                <strong style="color: red">SOLD</strong>

            }
            else
            {
                <strong style="color: green">FOR SALE</strong>
            }
        </td>
        <td>

        <td>
            @Html.ActionLink("Details", "Details", "Car", new { id=item.Id }, null)
        </td>
    </tr>
}

</table>
