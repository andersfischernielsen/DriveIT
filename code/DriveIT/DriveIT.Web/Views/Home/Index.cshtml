@model IEnumerable<DriveIT.Models.CarDto>

@{
    ViewBag.Title = "Index";
}

<h3>10 newest cars:</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Make)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sold)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Make)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td>
            @if (item.Sold == true)
            {
                <strong style="color: red">SOLD</strong>

            }
            else
            {
                <strong style="color: green">FOR SALE</strong>
            }
        </td>
        <td>

        <td>
            @Html.ActionLink("Details", "Details", "Car", new { id=item.Id }, null)
        </td>
    </tr>
}

</table>
